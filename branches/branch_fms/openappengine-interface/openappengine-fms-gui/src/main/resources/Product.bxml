  <Form:ProductForm xmlns:bxml="http://pivot.apache.org/bxml"
    xmlns:content="org.apache.pivot.wtk.content"
    xmlns:Form="com.openappengine.fms.form"
	xmlns:collections="org.apache.pivot.collections"
	xmlns="org.apache.pivot.wtk">
  
  	<Form.Section heading="Product Information">
	        <BoxPane Form.label="Product Name" orientation="vertical">
		        <TextInput bxml:id = "productName" textKey="productName" text="%productName" prompt="Product Name" textSize="24"/>
	        </BoxPane>
	        
	        <BoxPane Form.label="Description" orientation="vertical">
		        <TextInput bxml:id = "description" prompt="Description" textKey="description" text="%description" />
	        </BoxPane>
	        
	        <BoxPane Form.label="Product Type">    
	            <ListButton bxml:id="productType" />
	        </BoxPane>
	        
	        <BoxPane Form.label="Introduction Date">
				<CalendarButton bxml:id="introductionDate" />
			</BoxPane>
			     
			<FlowPane xmlns:bxml="http://pivot.apache.org/bxml" xmlns="org.apache.pivot.wtk" Form.label="Amount">    
				<BoxPane orientation="vertical">
			        <TextInput bxml:id = "amount" prompt="Amount" textSize="24" textKey="fixedAmount" text="%fixedAmount" />
		        </BoxPane>
		        
		        <BoxPane Form.label="Amount" orientation="vertical">
			        <Checkbox bxml:id="includesTax" buttonData="Includes Tax" />
		        </BoxPane>
	        </FlowPane>
	        
	        <BoxPane Form.label="Net Price" orientation="vertical">
		        <TextInput bxml:id = "priceNet" textKey="netPrice" text="%netPrice" enabled="false" />
	        </BoxPane>
	        
	        <BoxPane Form.label="Tax" orientation="vertical">
		        <TextInput bxml:id = "tax" textKey="taxAmount" text="%taxAmount" enabled="false" />
	        </BoxPane>
	        
	        <BoxPane Form.label="Gross Price" orientation="vertical">
		        <TextInput bxml:id = "priceGross" textKey="grossPrice" text="%grossPrice" enabled="false" />
	        </BoxPane>
	</Form.Section>
	
