<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<!-- Support Beans -->
	<managed-bean>
		<managed-bean-name>listHelperBean</managed-bean-name>
		<managed-bean-class>com.openappengine.web.support.ListHelper</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	
	<!-- Model -->
	<managed-bean>
		<managed-bean-name>itemMasterModel</managed-bean-name>
		<managed-bean-class>com.openappengine.web.mvc.itemmaster.ItemMasterModel</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>partyModel</managed-bean-name>
		<managed-bean-class>com.openappengine.web.mvc.party.PartyModel</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<!-- Controller -->
	<managed-bean>
		<managed-bean-name>itemMasterController</managed-bean-name>
		<managed-bean-class>com.openappengine.web.mvc.itemmaster.ItemMasterController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>itemMaster</property-name>
			<value>#{itemMasterModel}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>partyController</managed-bean-name>
		<managed-bean-class>com.openappengine.web.mvc.party.PartyManagerController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>partyModel</property-name>
			<value>#{partyModel}</value>
		</managed-property>
	</managed-bean>
	
</faces-config>
