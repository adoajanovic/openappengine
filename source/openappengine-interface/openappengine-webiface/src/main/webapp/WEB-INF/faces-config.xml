<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0"
              metadata-complete="false">

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <message-bundle>messages</message-bundle>
    </application>
    
    <!-- Autocomplete Bean  -->
  	<managed-bean>
  		<managed-bean-name>autocompleteBean</managed-bean-name>
  		<managed-bean-class>com.openappengine.autocomplete.AutocompleteBean</managed-bean-class>
  		<managed-bean-scope>view</managed-bean-scope>
  	</managed-bean>
  	
  	<!-- UI Form Controller  -->
  	<managed-bean>
  		<managed-bean-name>formController</managed-bean-name>
  		<managed-bean-class>com.openappengine.form.controller.FormController</managed-bean-class>
  		<managed-bean-scope>view</managed-bean-scope>
  	</managed-bean>
  	
  	<managed-bean>
  		<managed-bean-name>loginFormBean</managed-bean-name>
  		<managed-bean-class>com.openappengine.web.apps.login.LoginFormBean</managed-bean-class>
  		<managed-bean-scope>request</managed-bean-scope>
  	</managed-bean>
  	
  	<managed-bean>
  		<managed-bean-name>testDataListAdapter</managed-bean-name>
  		<managed-bean-class>com.openappengine.crud.list.TestDataListAdapter</managed-bean-class>
  		<managed-bean-scope>request</managed-bean-scope>
  	</managed-bean>
  	
  	<managed-bean>
  		<managed-bean-name>adListDataSource</managed-bean-name>
  		<managed-bean-class>com.openappengine.crud.datasource.ADListDataSource</managed-bean-class>
  		<managed-bean-scope>request</managed-bean-scope>
  	</managed-bean>
  
</faces-config>
