<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
		
	<bean id="modelContext" class="com.openappengine.model.context.ModelContext"></bean>	
	
	<!-- Model Repository -->	
	<bean id="codeRepository" class="com.openappengine.repository.CodeRepository" scope="singleton"></bean>
	
	<bean id="salesOrderRepository" class="com.openappengine.repository.SalesOrderRepository" scope="singleton"></bean>
	
	
	<!-- Model Service -->
	<bean id="codeService" class="com.openappengine.service.impl.CodeServiceImpl" >
		<property name="codeRepository" ref="codeRepository"></property>
	</bean>
	
	<bean id="salesOrderService" class="com.openappengine.service.impl.SalesOrderServiceImpl" >
		<property name="salesOrderRepository" ref="salesOrderRepository"></property>
	</bean>
	
</beans>
