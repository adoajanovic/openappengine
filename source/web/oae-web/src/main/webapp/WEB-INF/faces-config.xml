<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<!-- Managed Beans -->
	<managed-bean>
		<managed-bean-name>richBean</managed-bean-name>
		<managed-bean-class>openapps.RichBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<!-- Application Beans -->
	<managed-bean>
		<managed-bean-name>listHelperBean</managed-bean-name>
		<managed-bean-class>com.ms.openapps.web.application.helper.ListHelperBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<!-- Controller -->
	<managed-bean>
		<managed-bean-name>salesOrderController</managed-bean-name>
		<managed-bean-class>com.ms.openapps.web.controller.salesorder.SalesOrderController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>itemMasterController</managed-bean-name>
		<managed-bean-class>com.ms.openapps.web.controller.itemmaster.ItemMasterController</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>FORM.CreateSalesOrder</from-outcome>
			<to-view-id>/salesorder/fromCreateSalesOrder.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Message Bundle -->
	<application>
		<message-bundle>messages.messages_en</message-bundle>
	</application>
</faces-config>
