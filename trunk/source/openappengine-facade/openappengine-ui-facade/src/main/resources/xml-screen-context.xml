<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<import resource="entity-facade-context.xml"/>
	
	<bean name="uiFacadeContext" class="com.openappengine.facade.ui.context.XmlScreenContext" />
	
	<!-- Default Screen Definition Document Reader -->
	<bean id="defaultScreenDefinitionDocumentReader" class="com.openappengine.facade.context.factory.xml.DefaultScreenDefinitionDocumentReader">
	</bean>
	
	<!-- XML Screen Definition Reader -->
	<bean id="xmlScreenDefinitionReader" class="com.openappengine.facade.context.factory.XmlScreenDefinitionReader">
		<property name="documentReader" ref="defaultScreenDefinitionDocumentReader"></property>
	</bean>

	
</beans>
