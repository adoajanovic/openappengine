<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<import resource="service-context.xml"/>
	
	<import resource="repository-context.xml"/>
	
	<bean id="entityDefinitionReader" class="com.openappengine.facade.entity.definition.EntityDefinitionReader">
		<property name="locations">
			<array>
				<value>EntityDefinitions.xml</value>
			</array>
		</property>
	</bean>
	
	<bean id="entityDefinitionCache" class="com.openappengine.facade.entity.definition.EntityDefinitionCache" init-method="initEntityDefinitionCache" scope="singleton">
		<property name="entityDefinitionReader" ref="entityDefinitionReader" />
	</bean>
	
	<bean id="entityFacade" class="com.openappengine.facade.entity.EntityFacadeImpl" >
		<property name="entityDefinitionCache" ref="entityDefinitionCache" />	
	</bean>
	
	<bean name="entityFacadeContext" class="com.openappengine.facade.entity.context.EntityFacadeContext">
	</bean>
	
</beans>
