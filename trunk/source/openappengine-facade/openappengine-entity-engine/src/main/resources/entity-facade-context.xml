<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<import resource="classpath:repository-context.xml"/>
	
	<!-- Start : Custom Field Type Definition Reader -->
	<bean id="textFieldDefinitionReader" class="com.openappengine.entity.definition.reader.UITextFieldDefinitionReader"/>
	<bean id="hiddenFieldDefinitionReader" class="com.openappengine.entity.definition.reader.UIHiddenFieldDefinitionReader"/>
	<bean id="textAreaDefinitionReader" class="com.openappengine.entity.definition.reader.UITextAreaDefinitionReader"/>
	<!-- End : Custom Field Type Definition Reader -->
	
	<bean id="fieldTypeDefinitionReader" class="com.openappengine.entity.definition.reader.FieldTypeDefinitionReader">
		<property name="uiDefinitionReaders">
			<map>
				<entry key="text-field" value-ref="textFieldDefinitionReader"></entry>
				<entry key="hidden-field" value-ref="hiddenFieldDefinitionReader"></entry>
				<entry key="text-area" value-ref="textAreaDefinitionReader"></entry>
			</map> 
		</property>
	</bean>
	
	<bean id="entityDefinitionReader" class="com.openappengine.entity.definition.reader.EntityDefinitionReader">
		<property name="fieldTypeDefinitionReader" ref="fieldTypeDefinitionReader"></property>
		<property name="locations">
			<array>
				<value>EntityDefinitions.xml</value>
			</array>
		</property>
	</bean>
	
	<bean id="entityDefinitionCache" class="com.openappengine.entity.definition.EntityDefinitionCache" init-method="initEntityDefinitionCache" scope="singleton">
		<property name="entityDefinitionReader" ref="entityDefinitionReader" />
	</bean>
	
	<bean id="entityFacade" class="com.openappengine.entity.EntityFacadeImpl" >
		<property name="entityDefinitionCache" ref="entityDefinitionCache" />
		<property name="hibernateTemplate" ref="hibernateTemplate"></property>
	</bean>
	
	<bean name="entityFacadeContext" class="com.openappengine.entity.context.EntityFacadeContext">
	</bean>
	
</beans>
