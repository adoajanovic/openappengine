<?xml version="1.0" encoding="UTF-8"?>
<screen>
	<page-content>
	
		<widget id="gridEx" name="User">
			<formGrid id="grid" columns="3" headerLabel="Example Form">
				<textfield id="username" name="username" labelId="username" path="/Entity/User/username" />
				<password id="password" name="password" labelId="password" path="/Entity/User/password" />
				<datepicker id="date" name="date" labelId="date" path="/Entity/User/date" />
				<datepicker id="date1" name="date" labelId="date1" path="/Entity/User/date" />
				<textarea id="comments" name="comments" labelId="comments" path="/Entity/User/comments" />
				<checkbox id="active" name="active" path="/Entity/User/active" labelId="active"/> 
				<dropdown id="currency" name="currency" labelId="currency" path="/Entity/User/currency">
					<option id="id1" labelId="INR" value="INR" />
					<option id="id2" labelId="USD" value="USD" />
				</dropdown>
			</formGrid>
		</widget>
		
		<widget id="user_registration_datatable" name="User">
			<dataTable id="datatable" path="/Entity/User">
				<header>
					<column id="lblUsername" labelId="Username" />
					<column id="lblPassword" labelId="Password" />
					<column id="lblActive" labelId="Active" />
					<column id="lblCurrency" labelId="Currency" />
					<column id="lblDate" labelId="Date" />
					<column id="lblComments" labelId="Comments" />
				</header>
				<column id="username" path="username" />
				<column id="password" path="password" />
				<column id="active" path="active" />
				<column id="currency" path="currency" />
				<column id="date" path="date" />
				<column id="comments" path="comments" />
			</dataTable>
		</widget>
	</page-content>
</screen>

