<?xml version="1.0" encoding="UTF-8"?>
<screen>
	<page-content>
	
		<widget id="UserForm_Widget" name="User">
			<formGrid id="UserForm_Grid" columns="1" headerLabel="User Form">
				<textfield id="username" name="username" labelId="username" path="/Entity/User/username"/>
				<password id="password" name="password" labelId="password" path="/Entity/User/password" />
				<datepicker id="date" name="date" labelId="date" path="/Entity/User/date" />
				<textarea id="comments" name="comments" labelId="comments" path="/Entity/User/comments" />
				<checkbox id="active" name="active" path="/Entity/User/active" labelId="active"/> 
				<dropdown id="currency" name="currency" labelId="currency" path="/Entity/User/currency">
					<option id="INR" labelId="INR" value="INR" />
					<option id="USD" labelId="USD" value="USD" />
				</dropdown>
				<actionButton id="submit" name="submit" labelId="submit" action="/login" >
				</actionButton>
			</formGrid>
			
			<dataTable id="Address_DataTable" path="/Entity/User/Address">
				<header>
					<column id="lblAddress1" labelId="Address1" />
					<column id="lblAddress2" labelId="Address2" />
					<column id="lblCity" labelId="City" />
					<column id="lblState" labelId="State" />
					<column id="lblCountry" labelId="Country" />
				</header>
				<column id="Address1" path="address1" />
				<column id="Address2" path="address2" />
				<column id="City" path="city" />
				<column id="State" path="state" />
				<column id="Country" path="country" />
			</dataTable>
		</widget>
		
