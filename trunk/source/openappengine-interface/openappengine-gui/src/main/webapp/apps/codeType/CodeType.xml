<?xml version="1.0" encoding="UTF-8"?>
<screen>

	<parameter>
		<param name="codeTypeId" value-ref="codeTypeId" required="true" />
	</parameter>
	
	<transition name="save">
		<condition>true</condition>
		<actions>
			<entity-save updateIfExists="true" value-field="codeTypeValue">
			</entity-save>
		</actions>
		<default-response url="." />
		<error-response save-current-screen="false" type="url" url="" url-type="screen-path" />
	</transition>

	<pre-actions>
		<entity-find-one entity-name="CodeType" value-field="codeTypeValue"
			auto-field-map="true" condition="codeTypeId >= 1">
		</entity-find-one>
	</pre-actions>

	<page-content>
		<widgets>
			<form-single id="CodeType_View" name="CodeType_View" value-ref="codeTypeValue" transition="createCodeType">
			</form-single>
		</widgets>
	</page-content>

</screen>